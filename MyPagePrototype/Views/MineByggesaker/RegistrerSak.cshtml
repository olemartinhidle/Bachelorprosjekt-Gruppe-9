@model MyPagePrototype.Models.Sak

@{
    ViewBag.Title = "RegistrerSak";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <br />
    <h3>Registrer din byggesak</h3>
    <p>Vennligst skriv inn riktige detaljer og trykk bekreft</p>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label>Velg tema</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SakNr, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SakNr, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Type bygg</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Eier, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Eier, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Bygningsnummer</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Dato, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Dato, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Status</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tema, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tema, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Næringsgruppa</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Sakbeskjed, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Sakbeskjed, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Nytt areal</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Svar, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Svar, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Ny høyde</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Svar, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Svar, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Bekreft" class="btn btn-default" />
        </div>
    </div>
</div>
}

