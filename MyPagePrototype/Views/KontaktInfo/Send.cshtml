@model MyPagePrototype.Models.KontaktInfo

@{
    ViewBag.Title = "KontaktSkjema";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="@Url.Content("~/Content/Kontaktskjema.css")" rel="stylesheet" type="text/css" />
}


<div class="content-container-60">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        
        <h4>Kontaktinformasjon</h4>
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Innmelders navn</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Navn, new { htmlAttributes = new { @class = "form-control", required = "Må fylles inn" } })
                @Html.ValidationMessageFor(model => model.Navn, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Telefonnummer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Telefonnummer, new { htmlAttributes = new { @class = "form-control", required = "Må fylles inn"  } })
                @Html.ValidationMessageFor(model => model.Telefonnummer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Epost, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Epost, new { htmlAttributes = new { @class = "form-control", required = "Må fylles inn"  } })
                @Html.ValidationMessageFor(model => model.Epost, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.MailØnsket)
                    @Html.ValidationMessageFor(model => model.MailØnsket, "", new { @class = "text-danger" })
                </div>
                <label class="control-label col-md-2 epostsamtykke">Jeg ønsker å få varsler på epost om oppdateringer knyttet til min observasjon</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Samtykke, new { @class = "form-control", required = "Må fylles inn"  })
                    @Html.ValidationMessageFor(model => model.Samtykke, "", new { @class = "text-danger", required = "Må markeres" })
                </div>
                <label class="control-label col-md-2 samtykke">Jeg samtykker til at disse opplysningene behandles i tråd med kommunens personvernerklæring</label>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn-bekreft" />
            </div>
        </div>
    </div>
    }
</div>
